<body>
  <div id="cover">
    <h1>Welcome to the SMART Memory Game!</h1>
    <div class="instruction-box">
      <p><strong>How to play:</strong></p>
      <p>You will be presented with a grid of animal emojis for a set amount of time.</p>
      <p>Memorise the grid as best as you can</p>
      <p>Next, you will be presented with another grid of animal emojis</p>
      <p>To succeed, spot the difference between the two grids!</p>
      <p>The game will get harder as you go on</p>
    </div>
    <button onclick="startGame()">Play</button>
  </div>

  <div id="game" style="display: none;">
    <h1>Spot the Difference</h1>
    <div id="roundInfo"></div>
    <div class="grid" id="emojiGrid"></div>
    <div id="timer"></div>
    <div id="message"></div>
  </div>

  <div id="end" style="display: none;">
    <h1>Well done!</h1>
    <p>Now, finish the survey and you will have earned an extra $2.50 for your SMART bank.</p>
  </div>

  <div id="countdownOverlay">
    <div id="countdownText"></div>
  </div>

  <script>
    const animalEmojis = [
      '🐶','🐱','🐭','🐹','🐰','🦊','🐻','🐼','🐨','🐯','🦁','🐮','🐷','🐸','🐵','🐔','🐧','🐦','🐤','🦆','🦉','🐴','🦄','🐝','🐛',
      '🦋','🐌','🐞','🐜','🦂','🐢','🐍','🦎','🦖','🦕','🐙','🦑','🦐','🦞','🦀','🐡','🐠','🐟','🐬','🐳','🐋','🦈'
    ];

    const rounds = [
      { gridSize: 4, time: 20, differences: 1, columns: 4 },
      { gridSize: 4, time: 20, differences: 1, columns: 4 },
      { gridSize: 6, time: 30, differences: 1, columns: 3 },
      { gridSize: 6, time: 30, differences: 1, columns: 3 },
      { gridSize: 8, time: 45, differences: 2, columns: 4 },
      { gridSize: 8, time: 45, differences: 2, columns: 4 },
      { gridSize: 10, time: 60, differences: 2, columns: 5 },
      { gridSize: 10, time: 60, differences: 2, columns: 5 },
      { gridSize: 12, time: 60, differences: 3, columns: 4 },
      { gridSize: 12, time: 60, differences: 3, columns: 4 }
    ];

    let currentRound = 0;
    let originalGrid = [];
    let modifiedGrid = [];
    let selectedIndices = [];
    let changedIndices = [];
    let countdownInterval;
    let lastDifferences = 0;

    const gridElement = document.getElementById('emojiGrid');
    const timerElement = document.getElementById('timer');
    const messageElement = document.getElementById('message');
    const roundInfoElement = document.getElementById('roundInfo');

    function getRandomGrid(size) {
      return Array.from({ length: size }, () =>
        animalEmojis[Math.floor(Math.random() * animalEmojis.length)]
      );
    }

    function renderGrid(grid, columns, clickable = false) {
      gridElement.innerHTML = '';
      gridElement.style.gridTemplateColumns = `repeat(${columns}, 1fr)`;
      grid.forEach((emoji, i) => {
        const cell = document.createElement('div');
        cell.className = 'cell';
        cell.textContent = emoji;
        if (clickable) {
          cell.addEventListener('click', () => handleSelect(i, cell));
        }
        gridElement.appendChild(cell);
      });
    }

    function modifyGrid(grid, count) {
      let newGrid = [...grid];
      let indices = [];
      while (indices.length < count) {
        let i = Math.floor(Math.random() * grid.length);
        if (!indices.includes(i)) {
          let newEmoji;
          do {
            newEmoji = animalEmojis[Math.floor(Math.random() * animalEmojis.length)];
          } while (newEmoji === newGrid[i]);
          newGrid[i] = newEmoji;
          indices.push(i);
        }
      }
      return { newGrid, changedIndices: indices };
    }

    function startCountdown(seconds, onComplete) {
      let remaining = seconds;
      timerElement.textContent = `Memorize this! ${remaining} seconds remaining`;
      countdownInterval = setInterval(() => {
        remaining--;
        timerElement.textContent = `Memorize this! ${remaining} seconds remaining`;
        if (remaining <= 0) {
          clearInterval(countdownInterval);
          onComplete();
        }
      }, 1000);
    }

    function displayRoundIntro(round, callback) {
      gridElement.innerHTML = '';
      messageElement.textContent = `Round ${currentRound + 1} of ${rounds.length}`;
      if (round.differences !== lastDifferences) {
        roundInfoElement.textContent = `This time there will be ${round.differences} difference${round.differences > 1 ? 's' : ''} to spot.`;
        lastDifferences = round.differences;
      } else {
        roundInfoElement.textContent = '';
      }
      timerElement.textContent = '';
      setTimeout(callback, 2000);
    }

    function startRound() {
      const round = rounds[currentRound];
      selectedIndices = [];
      displayRoundIntro(round, () => {
        messageElement.textContent = '';
        originalGrid = getRandomGrid(round.gridSize);
        renderGrid(originalGrid, round.columns);
        startCountdown(round.time, () => {
          gridElement.innerHTML = '';
          timerElement.textContent = '';
          messageElement.textContent = 'Now, spot the difference!';

          const result = modifyGrid(originalGrid, round.differences);
          modifiedGrid = result.newGrid;
          changedIndices = result.changedIndices;

          setTimeout(() => {
            messageElement.textContent = '';
            renderGrid(modifiedGrid, round.columns, true);
            timerElement.textContent = `Find the difference${round.differences > 1 ? 's' : ''}!`;
          }, 2000);
        });
      });
    }

    function handleSelect(index, cell) {
      if (selectedIndices.includes(index)) return;

      selectedIndices.push(index);

      const marker = document.createElement('div');
      marker.className = 'marker';
      marker.textContent = changedIndices.includes(index) ? '✅' : '❌';
      cell.appendChild(marker);

      const round = rounds[currentRound];
      if (selectedIndices.length === round.differences) {
        const correct = selectedIndices.filter(i => changedIndices.includes(i)).length;
        if (correct === round.differences) {
          messageElement.textContent = '🎉 Good job!';
        }
        setTimeout(() => {
          currentRound++;
          if (currentRound < rounds.length) {
            startRound();
          } else {
            document.getElementById('game').style.display = 'none';
            document.getElementById('end').style.display = 'flex';
          }
        }, 2000);
      }
    }

    function showCountdown(callback) {
      const overlay = document.getElementById('countdownOverlay');
      const text = document.getElementById('countdownText');
      const sequence = ['3', '2', '1', 'GO!'];
      let index = 0;

      overlay.style.display = 'flex';
      text.textContent = sequence[index];

      const interval = setInterval(() => {
        index++;
        if (index < sequence.length) {
          text.textContent = sequence[index];
        } else {
          clearInterval(interval);
          overlay.style.display = 'none';
          callback();
        }
      }, 1000);
    }

    function startGame() {
      document.getElementById('cover').style.display = 'none';
      showCountdown(() => {
        document.getElementById('game').style.display = 'block';
        startRound();
      });
    }
  </script>
</body>
</html>

